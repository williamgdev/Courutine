<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FRMaterial" />

    <style name="FRMaterial.ThreeLineList" />

    <style name="FRMaterial.ThreeLineList.Layout">
<!--        <item name="android:padding">16dp</item>-->
    </style>

    <style name="FRMaterial.ThreeLineList.Icon">
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FRMaterial.ThreeLineList.Title">
        <item name="android:textColor">@color/FRTitle</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FRMaterial.ThreeLineList.SubTitle" parent="FRMaterial.ThreeLineList.Title">
        <item name="android:textColor">@color/FRSubTitle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="FRMaterial.ThreeLineList.Header">
        <item name="android:padding">8dp</item>
    </style>

</resources>
